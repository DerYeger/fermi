{
	"bundle": {
		"active": true,
		"targets": "all",
		"windows": {
			"certificateThumbprint": null,
			"digestAlgorithm": "sha256",
			"timestampUrl": ""
		},
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"resources": [],
		"externalBin": [],
		"copyright": "",
		"category": "Utility",
		"shortDescription": "Fermentation Tracking App",
		"longDescription": "Track your fermentation projects, ingredients, and results",
		"macOS": {},
		"linux": {
			"deb": {}
		}
	},
	"build": {
		"beforeBuildCommand": "bun run turbo build:nuxt",
		"frontendDist": "../dist",
		"beforeDevCommand": "bun run turbo dev:nuxt",
		"devUrl": "http://localhost:3000"
	},
	"productName": "Fermi",
	"version": "1.1.1",
	"identifier": "dev.janmueller.fermi",
	"plugins": {
		"shell": {
			"open": "^((https?|mailto|tel|file):).+"
		}
	},
	"app": {
		"windows": [
			{
				"title": "Fermi",
				"width": 1200,
				"height": 800,
				"minWidth": 375,
				"minHeight": 600,
				"resizable": true,
				"fullscreen": false
			}
		],
		"security": {
			"csp": null
		}
	}
}
