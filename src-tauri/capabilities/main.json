{
	"$schema": "../gen/schemas/desktop-schema.json",
	"identifier": "main",
	"description": "Capabilities for the Fermi app window",
	"windows": [
		"main"
	],
	"permissions": [
		"core:path:default",
		"core:event:default",
		"core:window:default",
		"core:app:default",
		"core:resources:default",
		"core:menu:default",
		"core:tray:default",
		"notification:default",
		"dialog:default",
		"fs:default",
		"fs:allow-app-read",
		"fs:allow-app-write",
		"fs:allow-app-read-recursive",
		"fs:allow-app-write-recursive",
		"fs:allow-appdata-read",
		"fs:allow-appdata-write",
		"fs:allow-appdata-read-recursive",
		"fs:allow-appdata-write-recursive",
		"fs:allow-exists",
		"fs:allow-mkdir",
		"fs:allow-read",
		"fs:allow-read-text-file",
		"fs:allow-write",
		"fs:allow-write-text-file",
		"fs:allow-remove",
		"store:default"
	]
}
